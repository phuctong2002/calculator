<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="5dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/_0"
        android:gravity="right|center"
        android:textSize="40pt"
        android:id="@+id/textView"
        tools:ignore="RtlHardcoded" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <Button
                android:layout_height="40pt"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="CE"
                android:layout_margin="2dp"
                android:backgroundTint="#9F9D9D"
                android:id="@+id/BtnCE"/>
            <Button
                android:layout_height="40pt"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:backgroundTint="#9F9D9D"
                android:layout_margin="2dp"
                android:id="@+id/BtnC"/>
            <Button
                android:layout_height="40pt"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="BS"
                android:backgroundTint="#9F9D9D"
                android:id="@+id/BtnBS"
                android:layout_margin="2dp"/>
            <Button
                android:layout_height="40pt"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:id="@+id/BtnDiv"
                android:backgroundTint="#9F9D9D"
                android:layout_margin="2dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="7"
                android:id="@+id/Btn7"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="8"
                android:id="@+id/Btn8"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="9"
                android:id="@+id/Btn9"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:id="@+id/BtnMul"
                android:text="x" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="4"
                android:id="@+id/Btn4"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="5"
                android:id="@+id/Btn5"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="6"
                android:id="@+id/Btn6"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="-"
                android:id="@+id/BtnSub"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:id="@+id/Btn1"
                android:text="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:id="@+id/Btn2"
                android:text="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:id="@+id/Btn3"
                android:text="3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="+"
                android:id="@+id/BtnAdd"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="+/-" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="0"
                android:id="@+id/Btn0"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="."
                android:id="@+id/BtnFlo"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#9F9D9D"
                android:text="="
                android:id="@+id/BtnRes"/>
        </TableRow>
    </TableLayout>
</LinearLayout>